@model List<Product>
<partial name="_Notification" />
<div class="container">

	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-priamry">
				Product List
			</h2>
		</div>
		<div class="col-6" text-end>
			<a 
				asp-area="Admin"
				asp-controller="Product"
				asp-action="Upsert" 
				class="btn btn-primary"
			>
				Create new product 
			</a>
		</div>
	</div>


<table id="tblData" class="table table-boarded table-striped">
	<thead>
	<tr>
		<th>Title</th>
		<th>ISBN</th>
		<th>Price</th>
		<th>Author</th>
		<th>Category</th>
		<th></th>
	</tr>
	</thead>

</table>

</div>

@section Scripts {
	<script src="~/js/product.js"></script>
}